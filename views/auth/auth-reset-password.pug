extends ../layout

block content
  script(src="/javascripts/auth/auth-form.js")
  div(class="d-flex flex-row content justify-content-center mx-auto")
    form(class="card  w-50 mt-5" method="post" action=url)
      div(class="card-header") Reset password
      div(class="card-body")
        div(class="form-group")
          label Password 
          input(class="form-control" type="password" name="password")
        if errors
          ul(class="my-2")
            each error in errors 
              li(class="text-danger")= error 
        div(class="w-100 d-flex flex-row justify-content-space-between align-items-center")
          input(type="submit" value="Reset email" class="btn btn-primary ml-auto d-block")
